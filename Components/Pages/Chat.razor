@using SemanticKernelService
@rendermode InteractiveServer

@page "/chat"
@inject TextToTextService SK

<h3>Gemini Chat</h3>
<input @bind="input" placeholder="메시지" />
<button @onclick="Send">Send</button>
<button @onclick="Reset">Reset</button>

<ul>
@foreach (var m in SK.GetHistory())
{
    <li><b>@m.Role</b>: @m.Content</li>
}
</ul>

@code {
    private string? input;
    protected override void OnInitialized()
    {
        // 원하면 여기서 플러그인 추가
        // SK.AddPlugin<LightsPlugin>("Lights");
    }

    private async Task Send()
    {
        if (!string.IsNullOrWhiteSpace(input)) // 디버그 포인트 안잡힙
        {
            await SK.SendAsync(input);
            input = string.Empty;
        }
    }

    private void Reset() => SK.Reset();
}
