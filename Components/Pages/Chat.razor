@using PetService
@rendermode InteractiveServer

@page "/chat"
@inject PetChatService SK

<h3>Gemini Chat</h3>
<input @bind="input" placeholder="메시지" />
<button @onclick="Send">Send</button>

<ul>
@foreach (var m in SK.GetHistory())
{
    <li><b>@m.Role</b>: @m.Content</li>
}
</ul>

@code {
    private string? input;

    private async Task Send()
    {
        if (!string.IsNullOrWhiteSpace(input)) // 디버그 포인트 안잡힙
        {
            await SK.SendAsync(input);
            input = string.Empty;
        }
    }
}
